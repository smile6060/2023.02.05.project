<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.restaurant.repository.ReserveRepository">

    <resultMap id="dinningMst" type="com.koreait.restaurant.web.dto.SearchReserveReqDto">
        <result property="reserveId" column="reserve_id"></result>
        <result property="reserveName" column="reserve_name"></result>
        <result property="number" column="number"></result>
    </resultMap>

    <select id="findUserByReserveId" parameterType="integer" resultType="com.koreait.restaurant.web.dto.SearchReserveReqDto">
        select
            reserve_id as reserveId,
            reserve_name as reserveName,
            number
        from
            dinning_mst
        where
            1 = 1
        and reserve_id = #{reserveId}
        and number = #{number}
    </select>



</mapper>